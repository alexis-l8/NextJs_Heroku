{
  "name": "heroku-nextjs",
  "version": "1.0.0",
  "description": "Deploy Next.js server-side React apps to Heroku",
  "scripts": {
    "dev":
      "cross-env NODE_ENV=development nodemon -w start.js start.js -p $PORT",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node start -p $PORT",
    "heroku-postbuild": "npm run build",
    "cypress:open": "cypress open",
    "cypress:dev": "cypress run --env URL=https://localhost:3000/",
    "cypress:production":
      "cypress run --env URL=https://dry-ridge-88283.herokuapp.com/"
  },
  "engines": {
    "node": "9.5.x",
    "npm": "5.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mars/heroku-nextjs.git"
  },
  "keywords": ["react", "ssr", "server-side-rendering"],
  "author": "Mars Hall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mars/heroku-nextjs/issues"
  },
  "homepage": "https://github.com/mars/heroku-nextjs#readme",
  "dependencies": {
    "env2": "^2.2.0",
    "express": "^4.16.3",
    "knex": "^0.14.4",
    "next": "^4.2.3",
    "nodemon": "^1.17.2",
    "pg": "^7.4.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "cypress": "^2.1.0"
  }
}
